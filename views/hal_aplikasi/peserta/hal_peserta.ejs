<%- include('../../component/head') %>

    <div class="card h-100">
        <h3 class="card-header">Daftar Calon Karyawan</h3>
        <div class="card-body">
            <table class="table table-striped table-hover" data-pagination="true" data-search="true" data-toggle="table" data-locale="id-ID" data-pagination-parts='[pageInfo, pageList]' data-buttons="table-buttons">
                <thead>
                    <tr>
                        <th scope="col" data-sortable="true">No</th>
                        <th scope="col" data-sortable="true">Nama Calon Karyawan</th>
                        <th scope="col" data-sortable="true">Status Akun</th>
                        <th scope="col" class="text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% let no = 1; for(data of calonKar){ %>
                        <tr>
                            <td>
                                <%= no %>
                            </td>
                            <td>
                                <%= data.NAMA_CALON %>
                            </td>
                            <% if(data.STAT_TES == 1) {%>
                                <td class="table-success">
                                    Sudah mengikuti tes
                                </td>
                                <%} else if(data.STAT_KELENGKAPAN == 0){ %>
                                    <td class="table-danger">
                                        Menunggu review
                                    </td>
                                    <%} else if(data.STAT_KELENGKAPAN == 1){ %>
                                        <td class="table-warning">
                                            Terdapat revisi
                                        </td>
                                        <%} else {%>
                                            <td class="table-primary">
                                                Belum mengikuti tes
                                            </td>
                                            <%}%>
                                                <td>
                                                    <% if(data.STAT_TES != 1){ %>
                                                        <button class="btn btn-success w-50" onclick="window.location = '/peserta/review/<%= data.ID_CALON %>'"><span><i class="bi bi-search me-2"></i></span>Review Akun</button>
                                                        <% } else { %>
                                                            <button class="btn btn-primary w-50" disabled><span><i class="bi bi-check-circle-fill me-2"></i></span>Disetujui</button>
                                                            <% } %>
                                                </td>

                        </tr>
                        <% no++; } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../../component/footer') %>