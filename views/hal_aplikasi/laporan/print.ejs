<style type="text/css" media="print">
    @page {
        size: portrait;
    }
</style>
<script>
    function setdate(value) {
        var date = new Date(value);

        options = {
            weekday: 'long',
            day: 'numeric',
            month: 'long',
            year: 'numeric',
        };

        var DateFormatted = new Intl.DateTimeFormat('id', options).format(date);

        return DateFormatted;
    }

    function setdateTTD(value) {
        var date = new Date(value);

        options = {
            day: 'numeric',
            month: 'long',
            year: 'numeric',
        };

        var DateFormatted = new Intl.DateTimeFormat('id', options).format(date);

        return DateFormatted;
    }
</script>

<body style="padding: 36px;">
    <div style="min-height: 75%">
        <div class="mb-4 d-flex justify-content-center">
            <img src="/assets/img/kop.jpg" style="width: 95%">
        </div>
        <table class="table table-striped table-hover table-bordered" data-locale="id-ID">
            <thead>
                <tr>
                    <th scope="col" data-width="50">No</th>
                    <th scope="col">Nama Calon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tanggal Daftar</th>
                </tr>
            </thead>
            <tbody>
                <% let i = 0; for(data of listCalon){ %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= data.NAMA_CALON %>
                        </td>
                        <td>
                            <%= data.EMAIL %>
                        </td>
                        <td class="daftarFormatted">
                            <script>
                                document.getElementsByClassName('daftarFormatted')[<%= i %>].innerHTML = setdate("<%= data.TGL_DAFTAR%>");
                            </script>
                        </td>
                    </tr>
                    <% i++;}%>
            </tbody>
        </table>
    </div>
    <div class="d-flex flex-column text-center" style="width: 35%">
        <div>Surabaya,
            <span id="now"></span>
            <script defer>
                let now = setdateTTD(new Date());
                document.getElementById('now').innerHTML = now;
            </script>
        </div>
        <div>
            <img src="<%= src %>">
        </div>
        <div>
            <%= user.nama %>
        </div>
    </div>
</body>
<script src="/js/bootstrap-table.min.js"></script>
<script src="/js/bootstrap.bundle.js"></script>
<script>
    $(document).ready(function() {
        window.onafterprint = window.close;
        window.print();
    });
</script>